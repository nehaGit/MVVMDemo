<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMDemo.Views.LoginPage">

  <StackLayout Padding="10,10,10,10" Spacing="10">
    <StackLayout Orientation="Horizontal">
      <Label Text="Name" />
      <Entry Text="{Binding Email}" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
    </StackLayout>

    <Label Text="{Binding Displaymessage}" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
    <Button Text="Login"  VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />

    <ActivityIndicator Color="Red" IsRunning="False" />
  </StackLayout>
</ContentPage>